import React, { useEffect, useState } from 'react';
import axios from 'axios';
import { useApi } from '@core/api/api-client';

export const {{modelName}}List = () => {
  const { data: items, loading } = useApi<{{modelName}}>('/api/{{modelVar}}');

  if (loading) return <div className="p-4">Chargement...</div>;

  return (
    <div className="p-4">
      <h2 className="text-xl font-bold mb-4">{{modelName}} List</h2>
      <ul className="space-y-2">
        {items.map((item) => (
          <li key={item.id} className="border p-2 rounded flex justify-between">
            <span>{JSON.stringify(item)}</span>
          </li>
        ))}
      </ul>
    </div>
  );
};
